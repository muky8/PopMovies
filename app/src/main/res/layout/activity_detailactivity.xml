<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detailactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mukhter.popmovies.Detailactivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Chapie is a robot."
        android:textSize="18sp"
        android:padding="8dp"
        android:id="@+id/plotsynopsis"
        android:scrollbars="vertical"
        android:layout_below="@+id/relativelayout2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />
    <View
        android:id="@+id/SplitLine_hor1"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/plotsynopsis"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout2"
        android:layout_below="@+id/titlerelativelayout"
        android:layout_alignParentStart="false">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:id="@+id/imagedetail"
            android:layout_marginStart="7dp"
            android:scaleType="fitStart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearlayout1"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-02-23"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"
                android:id="@+id/releasedate"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.3/10"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="115dp"
                android:fontFamily="serif"
                android:id="@+id/userrating"/>


        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/titlerelativelayout"
        android:background="#009688"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chappie"
            android:textSize="35sp"
            android:padding="15dp"
            android:textColor="#ffffff"
          android:maxLines="1"
            android:id="@+id/Movietitle"
            android:layout_marginTop="19dp" />

    </RelativeLayout>

</RelativeLayout>
